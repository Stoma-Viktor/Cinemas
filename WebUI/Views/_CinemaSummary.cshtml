@model Domain.Entities.Cinema

<div class="well">
    <div class="row">
        <div class="col-xs-10">
            <h3>
                <strong>@Model.CinemaName</strong>
            </h3>
            <h4>
                <strong>@Model.Year</strong>
                <strong>@Model.Country</strong>
                <strong>@Model.Directors</strong>
                <strong>@Model.Category</strong>
                <strong>@Model.time</strong>
                <strong>@Model.Artors</strong>

            </h4>
        </div>

        <div class="col-xs-2">
            <h3>
                <strong class="pull-right label label-primary"> @Model.Price.ToString("# руб")</strong>
            </h3>
        </div>
    </div>
    <span class="lead">
        @Model.Description
    </span>
</div>